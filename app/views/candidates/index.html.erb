<h1>Listing candidates</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Party</th>
    <th>Election date</th>
    <th>Area</th>
    <th>Office</th>
    <th>Homepage</th>
    <th>Mailing address</th>
    <th>Email</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @candidates.each do |candidate| %>
  <tr>
    <td><%= candidate.name %></td>
    <td><%= candidate.party %></td>
    <td><%= candidate.election_date %></td>
    <td><%= candidate.area %></td>
    <td><%= candidate.office %></td>
    <td><%= candidate.homepage %></td>
    <td><%= candidate.mailing_address %></td>
    <td><%= candidate.email %></td>
    <td><%= candidate.phone %></td>
    <td><%= link_to 'Show', candidate %></td>
    <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
    <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

